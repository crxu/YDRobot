<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_50"
    android:layout_gravity="center_vertical"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="@dimen/size_7">

    <TextView
        android:id="@+id/horizontal_bar_channel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10"
        android:singleLine="true"
        android:text="频道1"
        android:textColor="@color/content_color"
        android:textSize="@dimen/font_size_16" />

    <View
        android:id="@+id/horizontal_bar_channel_split"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_2.5"
        android:layout_alignLeft="@id/horizontal_bar_channel_title"
        android:layout_alignRight="@id/horizontal_bar_channel_title"
        android:layout_below="@id/horizontal_bar_channel_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/size_18"
        android:layout_marginRight="@dimen/size_18"
        android:layout_marginTop="4dp"
        android:background="@color/content_color"
        android:visibility="visible" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/size_15"
    android:paddingRight="@dimen/size_15">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/size_110"
        android:layout_height="@dimen/size_80"
        android:layout_marginRight="@dimen/size_20"
        android:layout_marginTop="@dimen/size_10"
        android:visibility="visible" />

    <View
        android:id="@+id/tag"
        android:layout_width="@dimen/size_0"
        android:layout_height="@dimen/size_90"
        android:layout_alignTop="@+id/img" />

    <TextView
        android:id="@+id/txt_title"
        style="@style/content_text_main_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:layout_toRightOf="@+id/img"
        android:lines="2" />

    <TextView
        android:id="@+id/txt_source"
        style="@style/tip_text_style"
        android:layout_alignBottom="@+id/tag"
        android:layout_alignLeft="@+id/txt_title"
        android:layout_marginBottom="@dimen/size_10" />

    <TextView
        android:id="@+id/txt_date"
        style="@style/tip_text_style"
        android:layout_alignBottom="@+id/tag"
        android:layout_alignRight="@+id/txt_title"
        android:layout_marginBottom="@dimen/size_10" />

    <View
        android:id="@+id/line"
        style="@style/line_theme" />

</RelativeLayout>
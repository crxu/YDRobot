<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/size_220"
        android:layout_height="@dimen/size_115"
        android:layout_gravity="center"
        android:background="@drawable/bg_tv_fast_forward"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_tv_fast_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fast_forward"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_25"/>

        <TextView
            android:id="@+id/tv_tv_fast_forward_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/white"/>

        <SeekBar
            android:id="@+id/sb_tv_fast_forward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_4"
            android:layout_marginRight="@dimen/size_4"
            android:layout_marginTop="@dimen/size_10"
            android:background="@color/translucent"
            android:maxHeight="@dimen/size_3"
            android:progress="0"
            android:progressDrawable="@drawable/bg_music_seek_bar" />
    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_tv_classify_movie_live_bg1"
        android:layout_width="@dimen/size_4"
        android:layout_height="@dimen/size_20"
        android:layout_marginTop="@dimen/size_14"
        android:background="@color/theme_color" />

    <TextView
        android:id="@+id/tv_tv_classify_movie_live_classify_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_11"
        android:layout_marginTop="@dimen/size_14"
        android:layout_toRightOf="@+id/tv_tv_classify_movie_live_bg1"
        android:textColor="@color/content_color"
        android:textSize="@dimen/font_size_15" />

    <View
        android:id="@+id/view_tv_classify_movie_live_line1"
        style="@style/line_theme_horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.5"
        android:layout_below="@+id/tv_tv_classify_movie_live_classify_name"
        android:layout_marginEnd="@dimen/size_15"
        android:layout_marginStart="@dimen/size_15"
        android:layout_marginTop="@dimen/size_14" />

    <ImageView
        android:id="@+id/iv_tv_classify_movie_live_play"
        android:layout_width="@dimen/size_13"
        android:layout_height="@dimen/size_12"
        android:layout_below="@+id/view_tv_classify_movie_live_line1"
        android:layout_marginLeft="@dimen/size_15"
        android:layout_marginTop="@dimen/size_19"
        android:src="@drawable/ic_port_channel_play" />

    <TextView
        android:id="@+id/tv_tv_classify_movie_live_playing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:layout_below="@+id/view_tv_classify_movie_live_line1"
        android:layout_marginLeft="@dimen/size_8"
        android:layout_marginRight="@dimen/size_75"
        android:layout_toRightOf="@+id/iv_tv_classify_movie_live_play"
        android:gravity="center_vertical"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/font_size_15" />

    <TextView
        android:id="@+id/tv_tv_classify_movie_live_start_play"
        android:layout_width="@dimen/size_59"
        android:layout_height="@dimen/size_30"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view_tv_classify_movie_live_line1"
        android:layout_marginRight="@dimen/size_15"
        android:layout_marginTop="@dimen/size_10"
        android:background="@drawable/selector_tv_live_see"
        android:gravity="center"
        android:text="观看"
        android:textColor="@color/selector_color_theme_white"
        android:textSize="@dimen/font_size_15" />

    <View
        android:id="@+id/view_tv_classify_movie_live_line2"
        style="@style/line_theme_horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10"
        android:layout_below="@id/tv_tv_classify_movie_live_playing" />
</RelativeLayout>
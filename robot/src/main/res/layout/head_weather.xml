<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_5"
            android:textColor="@android:color/white"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/txt_temperature_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_temperature"
            android:layout_toRightOf="@+id/txt_temperature"
            android:text="Â°"
            android:textColor="@android:color/white"
            android:textSize="80sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_now"
            android:layout_width="@dimen/size_25"
            android:layout_height="@dimen/size_25" />

        <TextView
            android:id="@+id/txt_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_8"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_20"
        android:layout_marginTop="@dimen/size_25"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/size_15">

            <ImageView
                android:id="@+id/img_wind"
                android:layout_width="@dimen/size_13"
                android:layout_height="@dimen/size_13" />

            <TextView
                android:id="@+id/txt_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_hum"
                android:layout_width="@dimen/size_13"
                android:layout_height="@dimen/size_13" />

            <TextView
                android:id="@+id/txt_hum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="@dimen/size_15">

            <ImageView
                android:id="@+id/img_air"
                android:layout_width="@dimen/size_13"
                android:layout_height="@dimen/size_13" />

            <TextView
                android:id="@+id/txt_air"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_0.5"
        android:background="#4cFFFFFF" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gv_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_120"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_marginTop="@dimen/size_20"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_0.5"
        android:layout_marginBottom="@dimen/size_10"
        android:background="#4cFFFFFF" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_tv_classify_local_bg1"
        android:layout_width="@dimen/size_4"
        android:layout_height="@dimen/size_20"
        android:layout_marginTop="@dimen/size_14"
        android:background="@color/theme_color" />

    <TextView
        android:id="@+id/tv_tv_classify_local_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_11"
        android:layout_marginTop="@dimen/size_14"
        android:layout_toRightOf="@id/tv_tv_classify_local_bg1"
        android:text="北京市"
        android:textColor="@color/content_color"
        android:textSize="@dimen/font_size_15" />

    <View
        android:id="@+id/view_tv_classify_local_line1"
        style="@style/line_theme_horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.5"
        android:layout_below="@id/tv_tv_classify_local_city_name"
        android:layout_marginEnd="@dimen/size_15"
        android:layout_marginStart="@dimen/size_15"
        android:layout_marginTop="@dimen/size_14" />

    <com.readyidu.robot.ui.tv.view.flowlayout.TagFlowLayout
        android:id="@+id/tfl_tv_local_see_more"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:layout_below="@id/view_tv_classify_local_line1"
        android:layout_marginLeft="@dimen/size_5" />

    <LinearLayout
        android:id="@+id/ll_see_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tfl_tv_local_see_more"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/font_size_15" />

        <ImageView
            android:id="@+id/iv_see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_4"
            android:src="@drawable/ic_see_more" />
    </LinearLayout>


    <View
        android:id="@+id/view_tv_classify_local_line2"
        style="@style/line_theme_horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10"
        android:layout_below="@id/ll_see_more"
        android:layout_marginTop="@dimen/size_16" />
</RelativeLayout>
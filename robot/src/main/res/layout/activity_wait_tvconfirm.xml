<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/parent_style">

    <com.readyidu.robot.ui.widgets.CustomTopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:show_left_type="2"
        app:show_right="false"
        app:top_title="等待" />

    <TextView
        style="@style/content_text_style"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/size_65"
        android:gravity="center"
        android:textColor="@color/tip_color"
        android:textSize="@dimen/font_size_18"
        android:text="@string/wait_tv_confirm" />

    <ProgressBar
        android:id="@+id/tv_pb_loading"
        style="@android:style/Widget.Holo.Light.ProgressBar.Large.Inverse"
        android:layout_width="@dimen/size_50"
        android:layout_height="@dimen/size_50"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size_153" />
</LinearLayout>

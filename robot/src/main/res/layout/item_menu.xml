<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_menu"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="@dimen/size_185" />

    <LinearLayout
        android:id="@+id/rl_item_menu_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_15">
        <TextView
            android:layout_width="@dimen/size_10"
            android:layout_height="@dimen/size_3"
            android:background="@color/content_color"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_item_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:text="@string/hot_recommend"
            android:textSize="@dimen/font_size_17"
            style="@style/content_text_style"/>
        <TextView
            android:layout_width="@dimen/size_10"
            android:layout_height="@dimen/size_3"
            android:background="@color/content_color"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_15" />
</LinearLayout>